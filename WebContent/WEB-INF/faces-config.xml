<navigation-rule>
     <from-view-id>/faces/login.jsp</from-view-id>
     <navigation-case>
       <from-action>#{loginBean.validateUserLogin}</from-action>
       <from-outcome>y</from-outcome>
       <to-view-id>index.jsp</to-view-id>
       <redirect/>
     </navigation-case>
</navigation-rule>

</faces-config>
